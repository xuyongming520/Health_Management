<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.healthy.manage.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="cn.healthy.manage.domain.User">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="phone" jdbcType="CHAR" property="phone" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="email" jdbcType="VARCHAR" property="email" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="permission" jdbcType="VARCHAR" property="permission" />
    </resultMap>
    <select id="selectByPhone" resultMap="BaseResultMap">
        select *
        from user
        where phone = #{phone,jdbcType=CHAR}
    </select>
    <insert id="addByUser" parameterType="cn.healthy.manage.domain.User">
        insert into user (phone,password,email,create_time,address)
        values (#{phone,jdbcType=CHAR},#{password,jdbcType=VARCHAR},#{email,jdbcType=VARCHAR},#{createTime,jdbcType=TIMESTAMP},#{address,jdbcType=VARCHAR})
    </insert>
    <update id="updateByUser" parameterType="cn.healthy.manage.domain.User">
        update user
        set email = #{email,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>
    <select id="selectUserList" resultMap="BaseResultMap">
        select *
        from user
        order by id
        limit ${offset},${limit}
    </select>
    <select id="countUser" resultType="java.lang.Integer">
        select count(*)
        from user
    </select>
    <select id="selectByUserId" resultMap="BaseResultMap">
        select *
        from user
        where id = #{userId,jdbcType=INTEGER}
    </select>
</mapper>