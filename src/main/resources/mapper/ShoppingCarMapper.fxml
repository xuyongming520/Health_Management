<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.healthy.manage.mapper.ShoppingCarMapper">
    <resultMap id="BaseResultMap" type="cn.healthy.manage.domain.ShoppingCar">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="pro_id" jdbcType="INTEGER" property="proId" />
        <result column="user_id" jdbcType="INTEGER" property="userId" />
        <result column="number" jdbcType="INTEGER" property="number" />
        <result column="total" jdbcType="DECIMAL" property="total" />
    </resultMap>
    <select id="selectOrdersList" resultMap="BaseResultMap">
        select *
        from shoppingcart
        where user_id ={
            SELECT id
            FROM user
            where phone = #{phone,jdbcType=CHAR}
        }
        order by id
        limit ${offset},${limit}
    </select>
    <select id="countShoppingCar" resultType="java.lang.Integer">
        select count(*)
        from shoppingcart
    </select>
</mapper>